# Database (DB_PASSWORD is used by docker-compose.prod.yml)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/zavis_linkedin
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/zavis_linkedin
DB_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD

# Redis (for Celery task queue)
REDIS_URL=redis://redis:6379/0

# Google Sheets API (service account â€” legacy, optional)
GOOGLE_CREDENTIALS_JSON=credentials.json

# Google OAuth 2.0 (user-based auth via browser)
# Create at: https://console.cloud.google.com/apis/credentials
# Set authorized redirect URI to: http://<YOUR_SERVER_IP>:8000/api/v1/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/google/callback

# LinkedIn Authentication (Sales Navigator cookie)
LINKEDIN_LI_AT_COOKIE=
LINKEDIN_JSESSIONID_COOKIE=

# AI Role Matching (Claude or OpenAI)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# App settings
SECRET_KEY=change-me-to-a-random-secret
MAX_EMPLOYEES_PER_COMPANY=30
MAX_COMPANIES_PER_LAUNCH=50
SCRAPE_DELAY_MIN_SECONDS=2
SCRAPE_DELAY_MAX_SECONDS=5
